{
  "env": {
    "node": true,
    "browser": false,
    "es2024": true
  },
  "extends": "standard-with-typescript",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "@typescript-eslint/comma-dangle": "off",
    "@typescript-eslint/semi": "off",
    "@typescript-eslint/consistent-type-definitions": "type",
    "@typescript-eslint/member-delimiter-style": "off"
  }
}
